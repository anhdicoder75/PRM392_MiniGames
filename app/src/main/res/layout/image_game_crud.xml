<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F0F2F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:divider="?android:attr/dividerVertical"
        android:showDividers="middle"
        android:dividerPadding="16dp">

        <!-- Section: Manage Category -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/image_game_crud_bg_card"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvManageCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📁 Manage Categories"
                android:textSize="20sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnManageCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go to Category Manager"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:elevation="2dp" />
        </LinearLayout>

        <!-- Section: Manage Image Questions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/image_game_crud_bg_card"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvManageQuestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🖼️ Manage Image Questions"
                android:textSize="20sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnManageImageQuestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go to Question Manager"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:elevation="2dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
