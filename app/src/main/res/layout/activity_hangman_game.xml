<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5" android:layout_width="match_parent">

    <!-- Tiêu đề -->
<TextView
android:id="@+id/tvTitle"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Hangman Game"
android:textSize="24sp"
android:textStyle="bold"
android:gravity="center"
android:layout_marginBottom="16dp"/>

    <!-- Từ cần đoán -->
<TextView
android:id="@+id/tvWord"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:textSize="32sp"
android:gravity="center"
android:layout_marginBottom="16dp"
android:textColor="#000000"/>

    <!-- Gợi ý -->
<TextView
android:id="@+id/tvQuestion"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:textSize="18sp"
android:gravity="center"
android:layout_marginBottom="16dp"
android:textColor="#555555"/>

    <!-- Điểm số -->
<TextView
android:id="@+id/tvScore"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Điểm: 0"
android:textSize="18sp"
android:layout_marginBottom="8dp"/>

    <!-- Số lần đoán sai -->
<TextView
android:id="@+id/tvWrongGuesses"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Sai: 0/6"
android:textSize="18sp"
android:layout_marginBottom="8dp"/>

    <!-- Tiến độ -->
<TextView
android:id="@+id/tvProgress"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Tiến độ: 1/10"
android:textSize="18sp"
android:layout_marginBottom="16dp"/>

    <!-- Ô nhập chữ cái -->
<EditText
android:id="@+id/etGuess"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Nhập một chữ cái"
android:inputType="textCapCharacters"
android:maxLength="1"
android:textSize="18sp"
android:layout_marginBottom="16dp"/>

    <!-- Nút đoán -->
<Button
android:id="@+id/btnGuess"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Đoán"
android:textSize="18sp"
android:backgroundTint="#4CAF50"
android:layout_marginBottom="8dp"/>

    <!-- Nút chơi lại -->
<Button
android:id="@+id/btnNewGame"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Chơi mới"
android:textSize="18sp"
android:backgroundTint="#2196F3"
android:layout_marginBottom="8dp"/>

    <!-- Nút xem điểm -->
<Button
android:id="@+id/btnScores"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Xem điểm"
android:textSize="18sp"
android:backgroundTint="#FF9800"/>

    </LinearLayout>