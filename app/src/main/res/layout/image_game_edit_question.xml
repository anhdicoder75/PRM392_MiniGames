<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_game_edit_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3B82F6"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🎮 Edit Game Question"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Game Options Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8FAFC"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="🎮 Game Options"
                android:textColor="#1E293B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/optionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnAddOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#10B981"
                android:elevation="4dp"
                android:padding="12dp"
                android:text="➕ Add Option"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Correct Answer Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="🎯 Correct Answer"
                android:textColor="#EF4444"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerCorrectAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="#F9FAFB"
                android:elevation="1dp"
                android:padding="20dp" />
        </LinearLayout>

        <!-- Category Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📂 Category"
                android:textColor="#8B5CF6"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9FAFB"
                android:elevation="1dp"
                android:paddingVertical="20dp" />
        </LinearLayout>

        <!-- Question Text Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="❓ Question Text"
                android:textColor="#3B82F6"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etQuestionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#F8FAFC"
                android:elevation="1dp"
                android:hint="Enter your question here..."
                android:paddingHorizontal="16dp"
                android:paddingVertical="15dp"
                android:textColor="#1E293B"
                android:textColorHint="#64748B"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Hint Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FEF3C7"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="💡 Hint"
                android:textColor="#92400E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#FFFFFF"
                android:elevation="1dp"
                android:hint="Enter a helpful hint..."
                android:paddingHorizontal="16dp"
                android:paddingVertical="15dp"
                android:textColor="#92400E"
                android:textColorHint="#A16207"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Explanation Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DBEAFE"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="📝 Explanation"
                android:textColor="#1E40AF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etExplanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#FFFFFF"
                android:elevation="1dp"
                android:hint="Explain the correct answer..."
                android:paddingHorizontal="16dp"
                android:paddingVertical="15dp"
                android:textColor="#1E40AF"
                android:textColorHint="#3B82F6"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Settings Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Difficulty -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="⭐ Difficulty"
                    android:textColor="#F59E0B"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etDifficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FEF3C7"
                    android:elevation="1dp"
                    android:hint="1-5"
                    android:inputType="number"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="12dp"
                    android:textColor="#92400E"
                    android:textColorHint="#A16207"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Time Limit -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="⏱️ Time (sec)"
                    android:textColor="#EF4444"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etTimeLimit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FEE2E2"
                    android:elevation="1dp"
                    android:hint="Seconds"
                    android:inputType="number"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="12dp"
                    android:textColor="#DC2626"
                    android:textColorHint="#EF4444"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Current Images Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📷 Current Images"
                android:textColor="#6B7280"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOldImages"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#F9FAFB"
                android:elevation="1dp"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- New Images Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="🖼️ Add New Images"
                android:textColor="#10B981"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPickImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#10B981"
                android:elevation="4dp"
                android:padding="16dp"
                android:text="📸 Pick Game Images"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSelectedImages"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="#F0FDF4"
                android:elevation="1dp"
                android:padding="8dp" />

            <Button
                android:id="@+id/btnClearImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="#EF4444"
                android:elevation="4dp"
                android:padding="12dp"
                android:text="🗑️ Clear All Images"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#3B82F6"
            android:elevation="8dp"
            android:padding="20dp"
            android:text="💾 Save Changes"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>