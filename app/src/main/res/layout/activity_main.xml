<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hangman Game"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <!-- Nút bắt đầu chơi -->
    <Button
        android:id="@+id/btnStartGame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bắt đầu chơi"
        android:textSize="18sp"
        android:backgroundTint="#4CAF50"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="48dp"/>

    <!-- Nút xem điểm cao -->
    <Button
        android:id="@+id/btnHighScores"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Xem điểm cao"
        android:textSize="18sp"
        android:backgroundTint="#FF9800"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnStartGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="16dp"/>

    <!-- Nút thoát -->
    <Button
        android:id="@+id/btnExit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thoát"
        android:textSize="18sp"
        android:backgroundTint="#F44336"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnHighScores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
    android:background="#FFF">

    <!-- Card hồ sơ -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_profile"
        android:layout_width="340dp"
        android:layout_height="110dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="13dp">

            <FrameLayout
                android:id="@+id/frame_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_avatar_default"
                    android:background="@drawable/bg_avatar_circle"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/img_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_frame_default"
                    android:scaleType="centerCrop"/>
            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/frame_avatar"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_welcome"
                    android:text="Xin chào!"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_point"
                    android:text="Điểm: 0"
                    android:textColor="#6E41C9"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btn_shop"
                        android:text="SHOP KHUNG"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/purple_500"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="10dp"
                        android:elevation="3dp"
                        android:minWidth="0dp"/>

                    <Button
                        android:id="@+id/btn_profile"
                        android:text="HỒ SƠ"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:backgroundTint="@android:color/darker_gray"
                        android:textColor="@android:color/white"
                        android:elevation="3dp"
                        android:minWidth="0dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- RecyclerView danh sách mini game -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_games"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="22dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_profile"
        app:layout_constraintBottom_toTopOf="@+id/fab_sync"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToPadding="false"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cloud_sync"
        android:contentDescription="Đồng bộ lên Cloud"
        app:backgroundTint="@color/purple_500"
        app:tint="@android:color/white"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
