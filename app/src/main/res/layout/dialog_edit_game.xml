<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="20dp">

    <TextView android:text="Tên Game" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/edt_game_title" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView android:text="Mô tả" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
    <EditText android:id="@+id/edt_game_desc" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
